<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <!-- Anda bisa menambahkan atribut lain di sini -->

    </style>

    <style name="LabelForm">
        <item name="android:fontFamily">@font/poppinssemibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ValueForm">
        <item name="android:fontFamily">@font/poppinsreguler</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Ini adalah style khusus yang bisa diklik, mewarisi dari ValueForm -->
    <style name="ValueForm.Clickable" parent="ValueForm">
        <!-- Mewarisi semua properti dari ValueForm -->

        <!-- Menambahkan properti agar terlihat seperti link -->
        <item name="android:textColor">@color/primary</item> <!-- Warna teks sama dengan warna primer/link -->
        <item name="android:clickable">true</item> <!-- Membuat TextView bisa diklik -->
        <item name="android:focusable">true</item> <!-- Bisa difokuskan dengan navigasi keyboard -->
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item> <!-- Memberikan efek ripple/umpan balik visual saat diklik -->
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>