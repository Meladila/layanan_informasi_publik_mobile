<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ikon Kategori -->
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_circle_primary_light"
            android:padding="8dp"
            android:src="@drawable/ic_notif"
            app:tint="@color/primary"
            tools:ignore="ContentDescription" />

        <!-- Konten Notifikasi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:text="Permohonan Anda Telah Disetujui" />

            <TextView
                android:id="@+id/tv_pesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/gray"
                android:textSize="13sp"
                tools:text="Nomor: 001/PPID/SMKN2BSK/2023" />

            <TextView
                android:id="@+id/tv_waktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"
                android:textSize="12sp"
                tools:text="10 Oktober 2025, 14:30" />

        </LinearLayout>

        <!-- Status Belum Dibaca -->
        <View
            android:id="@+id/view_unread_indicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_circle_unread"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>