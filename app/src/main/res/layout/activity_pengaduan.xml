<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.pengaduan.PengaduanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:layout_gravity="start"
                android:layout_marginEnd="16dp"
                android:onClick="onBack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsextrabold"
                android:text="Form Pengaduan"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_top_rounded_corners"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/input_pengaduan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp">

                <!-- ==================== DATA PENGADUAN ==================== -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data Pengaduan"
                    android:fontFamily="@font/poppinsextrabold"
                    android:textSize="16sp"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="16dp"/>

                <!-- Topik Pengaduan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Topik Pengaduan"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_topik_pengaduan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="9dp"
                            android:hint="Masukkan Topik Pengaduan"
                            android:background="@drawable/bg_edittext"
                            android:paddingLeft="20sp"
                            android:fontFamily="@font/poppinsreguler"
                            android:textSize="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Deskripsi Pengaduan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi Pengaduan"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_deskripsi_pengaduan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:hint="Masukkan Deskripsi Pengaduan"
                            android:background="@drawable/bg_edittext"
                            android:paddingLeft="20sp"
                            android:fontFamily="@font/poppinsreguler"
                            android:textSize="12dp"
                            android:inputType="textMultiLine"
                            android:lines="4" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Nama Pejabat Pelanggar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Pejabat Pelanggar"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_nama_pejabat"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="9dp"
                            android:hint="Masukkan Nama Pejabat Pelanggar"
                            android:background="@drawable/bg_edittext"
                            android:paddingLeft="20sp"
                            android:fontFamily="@font/poppinsreguler"
                            android:textSize="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Jabatan Pejabat Pelanggar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jabatan Pejabat Pelanggar"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_jabatan_pejabat"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="9dp"
                            android:hint="Masukkan Jabatan Pejabat Pelanggar"
                            android:background="@drawable/bg_edittext"
                            android:paddingLeft="20sp"
                            android:fontFamily="@font/poppinsreguler"
                            android:textSize="12dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Bukti Pendukung -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bukti Pendukung"
                        android:fontFamily="@font/poppinssemibold"
                        android:textSize="12sp"
                        android:textColor="@color/primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_pilih_bukti"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pilih File"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            android:backgroundTint="@color/primary"/>
                        <TextView
                            android:id="@+id/txt_nama_bukti"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginStart="8dp"
                            android:hint="Belum ada file dipilih"
                            android:fontFamily="@font/poppinsreguler"
                            android:textSize="12sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Format: PDF, JPG, PNG (maks 1MB)"
                        android:fontFamily="@font/poppinsreguler"
                        android:textSize="10sp"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:id="@+id/container_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="150dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_batal"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Batal"
                    android:textColor="@color/primary"
                    app:cornerRadius="32dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_simpan"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Simpan"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="32dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>