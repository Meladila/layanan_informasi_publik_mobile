<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.pengaduan.DetailPengaduanActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="56dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Kembali"
            android:onClick="onBack"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="@color/white"
            tools:ignore="OnClick" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/poppinsextrabold"
            android:text="Detail Pengaduan"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Konten Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_top_rounded_corners"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="28dp"
            android:paddingBottom="36dp">

            <!-- SECTION 1: STATUS PENGADUAN -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status Pengaduan"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primary" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/shape_status_warning"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="10dp"
                        android:text="Menunggu"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="Diproses" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 2: INFORMASI PENGADUAN -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi Pengaduan"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primary" />

                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Topik Pengaduan" />

                    <TextView
                        android:id="@+id/tv_topik_pengaduan"
                        style="@style/ValueForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Dugaan Penyalahgunaan Wewenang" />

                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Deskripsi Pengaduan" />

                    <TextView
                        android:id="@+id/tv_deskripsi_pengaduan"
                        style="@style/ValueForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Saya melaporkan bahwa pejabat tersebut..." />

                    <!-- Bukti Pendukung (Opsional) -->
                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Bukti Pendukung" />

                    <TextView
                        android:id="@+id/tv_bukti_pendukung"
                        style="@style/ValueForm.Clickable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:drawableEnd="@drawable/ic_external_link"
                        android:drawablePadding="6dp"
                        android:drawableTint="@color/primary"
                        android:text="Lihat dokumen"
                        android:visibility="visible"
                        tools:visibility="visible" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 3: DATA PELANGGAR (Opsional) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_pelanggar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:visibility="visible"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Pelanggar"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primary" />

                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Nama Pejabat" />

                    <TextView
                        android:id="@+id/tv_nama_pejabat_pelanggar"
                        style="@style/ValueForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Budi Santoso" />

                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Jabatan" />

                    <TextView
                        android:id="@+id/tv_jabatan_pejabat_pelanggar"
                        style="@style/ValueForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Kepala Seksi Administrasi" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 4: TANGGAPAN & TINDAK LANJUT -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggapan Tindak Lanjut"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primary" />

                    <!-- Tanggapan -->
                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Tanggapan Pengaduan" />

                    <TextView
                        android:id="@+id/tv_tanggapan_pengaduan"
                        style="@style/ValueForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Belum ada tanggapan."
                        android:textColor="@color/gray"
                        tools:text="Pengaduan sedang dalam verifikasi oleh tim PPID." />

                    <!-- Catatan Tindak Lanjut -->
                    <TextView
                        style="@style/LabelForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Catatan Tindak Lanjut" />

                    <TextView
                        android:id="@+id/tv_catatan_tindak_lanjut"
                        style="@style/ValueForm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Belum ada catatan."
                        android:textColor="@color/gray"
                        tools:text="Akan diteruskan ke Inspektorat pada 15 Oktober 2025." />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SECTION 5: RIWAYAT WAKTU -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Riwayat Proses"
                        android:textColor="@color/primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/primary"
                        android:backgroundTint="@color/primary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/LabelForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Diteruskan pada" />

                        <TextView
                            android:id="@+id/tv_diteruskan_pada"
                            style="@style/ValueForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="-"
                            tools:text="10/10/2025" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/LabelForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Tindak lanjut pada" />

                        <TextView
                            android:id="@+id/tv_tindak_lanjut_pada"
                            style="@style/ValueForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="-"
                            tools:text="15/10/2025" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/LabelForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Ditutup pada" />

                        <TextView
                            android:id="@+id/tv_ditutup_pada"
                            style="@style/ValueForm"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="-"
                            tools:text="20/10/2025" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>